<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/linear_layout_padding"
    tools:context=".ProfileInfoActivity">

    <TextView
        android:id="@+id/header_title_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_margin"
        android:text="@string/header"
        android:textSize="@dimen/header_font_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_margin"
        android:textSize="@dimen/input_font_size"
        tools:text="deadlysins@pm.me" />

    <TextView
        android:id="@+id/username_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_margin"
        android:textSize="@dimen/input_font_size"
        tools:text="JohnDoeSeven" />

    <TextView
        android:id="@+id/name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_margin"
        android:textSize="@dimen/input_font_size"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/age_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_margin"
        android:textSize="@dimen/input_font_size"
        tools:text="33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/again" />
    </LinearLayout>
</LinearLayout>